<%= form_for @group, html: { class: 'form-horizontal', role: 'form' } do |f| %>
    <% if @group.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@group.errors.count, "error") %> prohibited this competition from being saved:</h2>

            <ul>
                <% @group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :game_id, "Game:" %>
        <%= f.collection_select :game_id, Game.all, :id, :title, {selected: params[:game_id]}, { class: 'form-control' } %>
    </div>

    <div class="form-group">
        <%= f.label :user_ids, "Users:" %>
        <%= f.collection_select :user_ids, User.all, :id, :name, { include_hidden: false }, { multiple: true, class: 'form-control'} %>
    </div>

    <div class="form-group">
        <%= f.label :max_users, "Max users:" %>
        <%= f.number_field :max_users, { class: 'form-control' } %>
    </div>

    <div class="form-group">
        <%= f.label :notes, "Notes:" %>
        <%= f.text_area :notes, { class: 'form-control' } %>
    </div>

    <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>

